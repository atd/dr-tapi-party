<%= form_for song.plays.where(user_id: current_user.id).first || song.plays.build,
             remote: true do |f| %>
  <% if f.object.new_record? %>
    <%= f.hidden_field :song_id %>
  <% end %>

  <%= f.select :instruments, Play::Instruments.map{ |i| [i, i] }, {}, { multiple: true } %>
<% end %>
